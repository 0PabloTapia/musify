<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @playlist.name %>
</p>

<p>
  <strong>User:</strong>
  <%= @playlist.user.name %>
</p>

<%= form_with(model: Song.new, url: playlist_songs_path(@playlist), local: true) do |f| %>

<%= f.label :name %>
<%= f.text_field :name %>

<%= f.label :artist %>
<%= f.text_field :artist %>

 <%= f.submit :Add %>
<% end %>

<ul>
<% @playlist.songs.each do |song| %>
    <li> song nº <%= song.id %>, <%= song.artist %>, <%= song.name %> </li>
  
    <%=link_to 'delete' , song, method: :delete, data: {confirm: '¿està seguro?'} %> 
<%end %>
</ul>



<%= link_to 'Edit', edit_playlist_path(@playlist) %> |
<%= link_to 'Back', playlists_path %>
